doctype html
html
  head
    block meta
      meta(charset='utf-8')
      meta(name='viewport' content='initial-scale=1.0, maximum-scale=1.0')
      
    block appendmeta
    
    block title
      title Clever V1
    
    block css
      link(rel='stylesheet', href='public/pages-admin/index.css')
      
    block appendcss
    
  body
    nav.top-bar(data-topbar='')
      ul.title-area
        li.name
          h1
            a(href='/')
              | Clever V1
        li.toggle-topbar.menu-icon
          a(href='#')
            span Menu
      section.top-bar-section
        ul.left
          li.divider
          li
            a(href='/pages') Pages
          li.divider
          li
            a(href='/users') Users
          li.divider
        ul.right
          li.divider
          li.has-dropdown
            a(href='#') #{user.firstname || 'Guest'} #{user.lastname || 'User'}
            ul.dropdown
              li
                a(href='/auth#/logout') Logout
              
    block content
    
    footer.row
      .large-12.columns
        hr
        .row
          .large-6.columns
            p &copy; Copyright no one at all. Go to town.
          .large-6.columns
            ul.inline-list.right
              li
                a(href='#') Documentation
              li
                a(href='#') GitHub
    
    block prejs
    
    block js
      script(type='text/javascript', src='public/pages-admin/index.js')
    
    block appendjs
    

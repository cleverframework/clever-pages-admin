.navbar.pernod-cms__navbar
  background-color:#3366cc
  padding:15px 0

.navbar-nav > li > a
  color: white
  letter-spacing: 0.5px
  font-weight: 400
  border-bottom: 1px solid transparent
  &:hover
    background-color:transparent
    border-bottom: 1px solid #FFF

a.navbar-brand
  color: white
  font-weight: 500

a.dropdown-toggle
  &:hover
    background-color:red

.nav>li>a:focus,
.nav .open>a,
.nav .open>a:focus,
.nav .open>a:hover
  background-color:transparent
  border-bottom: 1px solid #FFF

.navbar-nav>li>.dropdown-menu
  border:white

li.active
  a
    border-bottom: 1px solid white

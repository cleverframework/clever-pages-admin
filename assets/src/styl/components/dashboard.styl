body
  padding-top: 100px
  background-color: #f2f5f7

.pages-template
  padding: 20px 15px
  text-align: left

.filter-col
  padding-left: 10px
  padding-right: 10px

.btn-file
  position: relative
  overflow: hidden

.btn-file input[type=file]
  position: absolute
  top: 0
  right: 0
  min-width: 100%
  min-height: 100%
  font-size: 100px
  text-align: right
  filter: alpha(opacity=0)
  opacity: 0
  outline: none
  background: white
  cursor: inherit
  display: block

.list-content__content
  background: white
  padding: 40px
  border-radius: 4px
